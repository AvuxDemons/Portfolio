    <meta property="og:image" itemprop="image" content="https://avux.xyz/static/assets/icon.png">
    <meta property="og:image:secure_url" itemprop="image" content="https://avux.xyz/static/assets/icon.png">
    <meta property="og:image:type" content="image/png">
