    <meta property="og:image:height" content="200">

    <link rel="icon" type="image/png" href="https://avux.xyz/static/assets/icon.png">
    <link rel="stylesheet" href="../static/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="../static/javascript/scrollreveal.min.js"></script>
    <script defer type="text/javascript" src="../static/javascript/scrollveal.js"></script>
</head>

<body>

    <div id="hero">
        <section class="container">
            <h1 class="hero-title">
                Hi, my name is <span class="text-color-main">Avux</span>
                <br> <span class="typed"> <span id="typed"></span> </span>
            </h1>
            <p class="hero-cta">
                <a class="cta-btn cta-btn--hero" href="#about">Learn more</a>
            </p>
        </section>
    </div>


    <section id="about">
        <div class="container">
            <h2 class="section-title">About Me</h2>
            <div class="row about-wrapper">
                <div class="about-wrapper__image">
                    <img class="img-fluid rounded-img" src="https://s.gravatar.com/avatar/ac61dced29eb701e7ef36be4bc944ee1?s=2048" alt="profile">
                </div>
                <div class="about-wrapper__info">
                    <p class="about-wrapper__info-text">
                        &nbsp; &nbsp; &nbsp; Hi ! I'm <span id="age"></span> years old and work on some projects when I
                        have
                        the time to spare.
                        Programming has been a part of my life since 2019. I love figuring out new ways of doing things
                        and letting my ideas come to life.
                    </p>
                    <p class="about-wrapper__info-text">
                        &nbsp; &nbsp; &nbsp; Basically code to develop some projects and learn new things! You
                        can
                        find some of my projects down below.
                    </p>
                    <span class="about-wrapper__cta">
                        <a href="https://github.com/avuxdemons" class="cta-btn cta-btn--resume" target="_blank">View
                            Github</a>
                        <span class="break-hidden">
                            <span class="about-language">
                                <img class="image-language" src="../static/assets/js.png" alt="javascript">
                                <img class="image-language" src="../static/assets/html.png" alt="html">
                                <img class="image-language" src="../static/assets/css.png" alt="css">
                                <img class="image-language" src="../static/assets/node.png" alt="node">
                                <img class="image-language" src="../static/assets/py.png" alt="python">
                            </span>
                        </span>
                </div>
            </div>
        </div>
    </section>


    <section id="projects">
        <div class="container">
            <div class="project-wrapper">
                <h2 class="section-title dark-blue-text">Projects</h2>

                <% project.map((project) => { %>
                <div class="row">
                    <div class="project-wrapper__text">
                        <h3 class="project-wrapper__text-title"><%= project.project %></h3>
                        <p class="project-wrapper__text-info">
                            <%= project.description %>
                        </p>
                        <div class="project-wrapper__text-btns">
                            <a href="<%= project.live %>" target="_blank" rel="noopener noreferrer"
                                class="cta-btn cta-btn--projects">See Live</a>
                            <a href="<%= project.github %>" target="_blank" rel="noopener noreferrer"
                                class="cta-btn cta-btn--projects">Github</a>
                        </div>
                    </div>

                    <div class="project-wrapper__image">
                        <a href="<%= project.live %>" target="_blank" rel="noopener noreferrer">
                            <div class="thumbnail rounded">
                                <img src="<%= project.thumbnail %>" class="img-fluid" alt="MagerNulis">
                            </div>
                        </a>
                    </div>
                </div>

                <% }) %>
                
            </div>
        </div>
    </section>


    <section id="contact">
        <div class="container">
            <h2 class="section-title">Contact</h2>
            <div class="contact-wrapper">
                <p class="contact-wrapper__text">Want to work together?</p>
                <a href="https://discord.com/users/891629296723050497" class="cta-btn cta-btn--resume"
                    target="_blank">Let's start talking!</a>
            </div>
        </div>
    </section>


    <footer class="footer">
        <div class="container">
            <a href="#hero" class="back-to-top">
                <i class="fa fa-angle-up fa-2x" aria-hidden="true"></i>
            </a>
            <div class="social-links">
                <a href="https://www.instagram.com/d.avux/" target="_blank" rel="noopener noreferrer">
                    <i class="fa fa-instagram"></i>
                </a>
                <a href="https://github.com/avuxdemons" target="_blank" rel="noopener noreferrer">
                    <i class="fa fa-github"></i>
                </a>
                <a href="https://www.youtube.com/channel/UCzGBVdkR8zs0gHseIGpw5Gw" target="_blank"
                    rel="noopener noreferrer">
                    <i class="fa fa-youtube-play"></i>
                </a>
            </div>
        </div>
    </footer>

    <script src="../static/javascript/vanilla-tilt.min.js"></script>
    <script type="text/javascript" src="../static/javascript/valtilt.js"></script>
    <script src="../static/javascript/typed.js"></script>

    <script>
        var dob = new Date("01/26/2004");
        var month_diff = Date.now() - dob.getTime();
        var age_dt = new Date(month_diff);
        var year = age_dt.getUTCFullYear();
        var age = Math.abs(year - 1970);

        document.getElementById("age").innerHTML = age;

        var typed = new Typed('#typed', {
            stringsElement: '#typed-strings',
            typeSpeed: 150,
            loop: true,
            strings: [
                'I like to code some projects.',
                'I like to watching anime.',
                'I like to playing games.',
                'I like to learn new things.',
            ],
        });
    </script>

</body>

</html>